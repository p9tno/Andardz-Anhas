                .language.desktop
                    .language__toggle Language:&nbsp;
                        span Eng
                    .language__list
                        a.language__item(href="#")
                            .language__flag
                                img(src="../../img/1.svg", alt="alt")
                            span Eng
                        a.language__item(href="#")
                            .language__flag
                                img(src="../../img/2.svg", alt="alt")
                            span rus
                        a.language__item(href="#")
                            .language__flag
                                img(src="../../img/3.svg", alt="alt")
                            span ՀԱՅ


            .header__col.desktop
                .search
                    a.search__link(href="#") Search



                .registration
                    a.btn(href="#")
                        span registration



        .header__nav
            .navbar__row
                .navbar__close.desktop
                nav.navbar#navbar
                    ul.menu
                        li.menu-item.current-menu-item
                            a(href="#") Fundraising
                        each item in ['What we do', 'Publications', 'Library', 'News', 'Write to us', 'Faq', 'Contact', ]
