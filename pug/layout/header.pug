                                img(src="../../img/2.svg", alt="alt")
                            span rus
                        a.language__item(href="#")
                            .language__flag
                                img(src="../../img/3.svg", alt="alt")
                            span ՀԱՅ

            .navbar__row.mobile
                .search
                    form.search__form
                        input.search__input(type="text" placeholder="Search" value="" name="s" autocomplete="off")
